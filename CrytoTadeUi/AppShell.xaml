<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CrytoTadeUi.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CrytoTadeUi.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="CrytoTadeUi">

    <TabBar>
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />
        <ShellContent
        Title="Load Candles"
        ContentTemplate="{DataTemplate views:LoadCandles}"
        Route="LoadCandles" />
    </TabBar>
</Shell>
